- if flash[:notice]
  .flash
    =flash[:notice]

.col-lg-3
.schedule_form.col-lg-6
  .col-lg-12.title
    = label_tag "Create new schedule for #{@event.name}"
  = form_tag "../schedules", :method => :post do
    .col-lg-12.margin
      = tag("input", type: 'hidden', name: "event_id", value: @event_id)
      = label_tag "Description"
    .col-lg-12.margin.description
      = text_area_tag(:description)
    .col-lg-12.margin
      = text_field_tag(:start_date, :start_date, class: "formbox")
    .col-lg-12.margin
      = text_field_tag(:end_date, :end_date, class: "formbox")
    .col-lg-12.margin
      = submit_tag("Done")
	  
:javascript
  $(document).ready(function() {
    $( "#start_date, #end_date" ).datepicker({format: 'yyyy-mm-dd'});
  });