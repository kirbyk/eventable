= form_for(@schedule) do |f|
  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control', required: true
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control', required: true
  .form-group
    = f.label :start_time
    = f.text_field :start_time, class: 'form-control', id: 'start_time', required: true
  .form-group
    = f.label :end_time
    = f.text_field :end_time, class: 'form-control', id: 'end_time', required: true
  .form-group
    = f.hidden_field :event_id, value: @event.id
    = f.submit "#{submit_verb} Schedule Item", class: 'btn btn-default'
