.col-lg-4.col-md-offset-4
  .panel.panel-default
    .panel-heading
      %h3.panel-title Edit schedule item for #{@event.name}
    .panel-body
      = render 'form', submit_verb: 'Update'

:javascript
  $(document).ready(function() {
    $('#start_time, #end_time').datetimepicker();

    $('#start_time').val('#{@schedule.start_time.strftime('%d/%m/%Y %I:%M %p')}');
    $('#end_time').val('#{@schedule.end_time.strftime('%d/%m/%Y %I:%M %p')}');
  });
