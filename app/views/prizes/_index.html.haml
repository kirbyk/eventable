- p = render "layouts/prizes"
- p = p.downcase
- if prizes.count > 0
  .div.title
    = prizes.count
    = p.pluralize(prizes.count)
    = "in #{@event.name}"
- else
  .div.title
    = "No "
    = p
    = " for this #{@event.name}"
.div
  = link_to "Create new " + p, controller: "prizes", action: "new", event_id: @event.id
- prizes.each do |p|
  = form_for(p, :method => :delete, :id => p.id) do |f| 
    .schedule
      %b 
        = "Name:" 
      = simple_format p.name
      .schedule_time.margin
        = "#{p.created_at.strftime("%m/%d/%Y")}"
      .actions.margin     
        = f.submit "delete"
      .margin
        = link_to 'Edit', controller: "prizes", action: "edit", event_id: @event.id, prize_id: p.id