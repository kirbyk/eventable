= form_for(@prize) do |f|
  .form-group
    = f.label :company
    = f.text_field :company, class: 'form-control', required: true
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control', required: true
  .form-group
    = f.label :award
    = f.text_field :award, class: 'form-control', required: true
  .form-group
    = f.hidden_field :event_id, value: @event.id
    = f.submit "#{submit_verb} #{@prizeType}", class: 'btn btn-default'
